{% extends 'base.html.twig' %}

{% block title %}EniSorties | Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1>Se connecter</h1>

        <div class="wave-group">
            <input name="email" required="" type="text" class="input">
            <span class="bar"></span>
            <label class="label">
                <span class="label-char" style="--index: 0">E</span>
                <span class="label-char" style="--index: 1">-</span>
                <span class="label-char" style="--index: 2">m</span>
                <span class="label-char" style="--index: 3">a</span>
                <span class="label-char" style="--index: 4">i</span>
                <span class="label-char" style="--index: 5">l</span>
            </label>
        </div>

        <div class="wave-group">
            <input required="" name="password" type="password" class="input">
            <span class="bar"></span>
            <label class="label">
                <span class="label-char" style="--index: 0">C</span>
                <span class="label-char" style="--index: 1">o</span>
                <span class="label-char" style="--index: 2">d</span>
                <span class="label-char" style="--index: 3">e</span>
            </label>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="form-check form-switch input-group mb-3 button">
            <div class="form-check">
                <input type="checkbox" name="_remember_me" class="form-check-input">
                <label class="button">
                    Se souvenir de moi
                </label>
            </div>
        </div>

        <div class="button">
            <button type="submit">
                Connexion
            </button>
            <div class="padding"></div>
            <div class="forget-password">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </form>
{% endblock %}
